import random

def play_game():
    
    total_games = 0
    dealer_score = 0
    player_score = 0
    player_bet = 0
    
    
    
    print("Welcome to Blackjack.")
    Age=int(input("What is your age? "))
    
    
    
    if Age<18:
        print("Sorry you are below age")
    else: 
        nationality=input("What is your nationality? ")
        if nationality=="Singapore" or nationality=="singapore" or nationality=="sg":
            player_chips = 9900
            print("You will have 9900 chips ")
        else:
            player_chips=10000
            print("You will have 10000 chips ")
        no_game=input ("How many games do you want to play")

        for total_games in range(int(no_game)):
            
            loop=True
            while loop:
                
                 
                if player_chips<=0:
                    print("Sorry you don't have enough chips to continue the game, we will have to stop the game now, wish to see you next time")
                else:
                    # Text to inform the player of the game
                    player_bet=int(input("How much do you wish to bet?"))

                    if player_bet>player_chips:
                        print("Your bet is more than what you have, please bet smaller.")
                    elif player_bet<=0:
                        print("Please bet again, your bet is too small.")
                    else:
                        print("Game " + str(total_games + 1) + ". Dealing the cards")

                        loop=False

                        # Dealer cards
                        dealer_cards = []
                        # Player cards
                        player_cards = []

                        while len(dealer_cards) != 2:
                            dealer_cards.append(random.randint(1, 11))
                            if len(dealer_cards) == 2:
                                print("Dealer has X &", dealer_cards[1])

                        # Player Cards
                        while len(player_cards) != 2:
                            player_cards.append(random.randint(1, 11))
                            if len(player_cards) == 2:
                                print("You have ", player_cards)


                        while sum(dealer_cards)<=16:
                            dealer_cards.append(random.randint(1, 11))
                            print("Dealer hit")
                            print(f"Dealer has X,{dealer_cards[1:7]}")


                        # Sum of the Player cards
                        while sum(player_cards) < 21 and sum(dealer_cards)<21:
                                action_taken = str(input("Do you want to stay or hit?  "))
                                if action_taken == "hit":
                                    player_cards.append(random.randint(1, 11))
                                    print("You now have a total of " + str(sum(player_cards)) + " from these cards ", player_cards)

                                elif action_taken == "stay":
                                    print("The dealer has a total of " + str(sum(dealer_cards)) + " with ", dealer_cards)
                                    print("You have a total of " + str(sum(player_cards)) + " with ", player_cards)
                                    break

                                else:
                                    print("invalid option, Please choose hit or stay.")


                        if sum(dealer_cards) > sum(player_cards) and sum(dealer_cards)<21 :
                            # 2) Add 1 for dealer
                            dealer_score += 1
                            print("Dealer wins!")
                            player_chips = player_chips - player_bet
                            print("You have "+ str(player_chips) + " left")
                        elif sum(dealer_cards)==21:
                            dealer_score += 1
                            print("Dealer wins by BlackJack!")
                            player_chips = player_chips - player_bet
                            print("You have "+ str(player_chips) + " left")
                        elif sum(player_cards) > 21:
                            # 2) Add 1 for dealer
                            dealer_score += 1
                            print("You BUSTED! Dealer wins.")
                            player_chips = player_chips - player_bet
                            print("You have "+ str(player_chips) + " left")
                        elif sum(dealer_cards) > 21:
                            player_score += 1
                            print("Dealer has busted!")
                            player_chips = player_chips + player_bet
                            print("You have won "+ str(player_bet) + " now you have "+str(player_chips))
                        elif sum(player_cards) == 21:
                            # 2) Add 1 for player
                            player_score += 1
                            print("You have BLACKJACK! You Win!! 21")
                            player_chips = player_chips + player_bet
                            print("You have won "+ str(player_bet) + " now you have "+str(player_chips))
                        else:
                            # 2) Add 1 for player
                            player_score += 1
                            print("You win!")
                            player_chips = player_chips + player_bet
                            print("You have won "+ str(player_bet) + " now you have "+str(player_chips))




                        # Text to inform the player of the status of the game and iterate over the total_games
                        print("Dealer: " + str(dealer_score) + " games" + " - to - You: " + str(player_score) + " games")
                        print("----BLACK--JACK----")
                        total_games += 1



play_game()
print("End of the game")
again=input("Do you wish to play again yes or no ?")
if again == "yes" or again == "Yes":
    play_game()
else:
    print("Thank you!!! wish to see you again")
